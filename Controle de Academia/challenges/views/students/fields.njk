<div class="item">
  <div>Imagem</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{ student.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input type="text" name="name" value="{{ student.name }}">
  </div>
</div>

<div class="item">
  <div>E-mail</div>
  <div>
    <input type="email" name="email" value="{{ student.email }}">
  </div>
</div>

<div class="item">
  <div>Ano escolar</div>
  <div>
    <select name="degree">
      <option value="5" {% if student.degree == "5" %} selected="selected" {% endif %}>5º ano</option>
      <option value="6" {% if student.degree == "6" %} selected="selected" {% endif %}>6º ano</option>
      <option value="7" {% if student.degree == "7" %} selected="selected" {% endif %}>7º ano</option>
      <option value="8" {% if student.degree == "8" %} selected="selected" {% endif %}>8º ano</option>
      <option value="9" {% if student.degree == "9" %} selected="selected" {% endif %}>9º ano</option>
      <option value="1" {% if student.degree == "1" %} selected="selected" {% endif %}>1º Ensino Médio</option>
      <option value="2" {% if student.degree == "2" %} selected="selected" {% endif %}>2º Ensino Médio</option>
      <option value="3" {% if student.degree == "3" %} selected="selected" {% endif %}>3º Ensino Médio</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Carga horária</div>
  <div>
    <input type="number" name="time" value="{{ student.time }}">
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{ student.birth }}">
  </div>
</div>

<button type="submit">Salvar</button>