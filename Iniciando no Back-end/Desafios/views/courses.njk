{% extends "layout.njk" %}

{% block head %}
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="courses.css">
{% endblock %}

{% block content%}
  <div class="course">

    <div class="card" id="starter">
      <div class="course-img">
        <img src="https://skylab.rocketseat.com.br/static/media/Starter.64c237cc.svg" alt="Starter">
      </div>
      <div class="course-modules">
        <p>Módulos: 50</p>
      </div>
      <div class="disponibility">
        <p>Gratuito</p>
      </div>
    </div>

    <div class="card" id="launchbase">
      <div class="course-img">
        <img src="https://skylab.rocketseat.com.br/static/media/LaunchBase.08285320.svg" alt="LaunchBase">
      </div>
      <div class="course-modules">
        <p>Módulos: 100+</p>
      </div>
      <div class="disponibility">
        <p>Pago</p>
      </div>
    </div>

    <div class="card" id="gostack">
      <div class="course-img">
        <img src="https://skylab.rocketseat.com.br/static/media/GoStack.83a178a0.svg" alt="GoStack">
      </div>
      <div class="course-modules">
        <p>Módulos: 100+</p>
      </div>
      <div class="disponibility">
        <p>Pago</p>
      </div>
    </div>

  </div>

  <div class="links" id="footer">
    <a href="https://github.com/rocketseat">Github</a>
    <a href="https://www.instagram.com/rocketseat_oficial/?hl=pt-br">Instagram</a>
    <a href="https://www.facebook.com/rocketseat/">Facebook</a>
  </div>

  <div class="modal-overlay maximize">
    <div class="modal maximize">
      <div class="close-modal">
        <i class="material-icons">close</i>
      </div>

      <div class="maximize-modal">
        <i class="material-icons">maximize</i>
      </div>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>

    </div>
  </div>

  <script src="scripts.js"></script>
{% endblock %}