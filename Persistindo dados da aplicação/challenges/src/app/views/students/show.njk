{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="photo" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Nome</div>
        <div>{{ student.name }}</div>
      </div>

      <div class="item">
        <div>E-mail</div>
        <div>{{ student.email }}</div>
      </div>

      <div class="item">
        <div>Ano escolar</div>
        <div>{{ student.degree }}</div>
      </div>

      <div class="item">
        <div>Carga horária</div>
        <div>
          {{ student.time }}
        </div>
      </div>

      <div class="item">
        <div>Aniversário</div>
        <div>{{ student.birth }}</div>
      </div>

      <button onclick="location.href='{{ student.id }}/edit'" type="button">Editar</button>
    </section>
  </div>
{% endblock %}