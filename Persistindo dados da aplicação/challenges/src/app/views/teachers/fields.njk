<div class="item">
  <div>Imagem</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input type="text" name="name" placeholder="Nome do professor" value="{{ teacher.name }}">
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{ teacher.birth }}">
  </div>
</div>

<div class="item">
  <div>Graude escolaridade</div>
  <div>
    <select name="degree">
      <option value="highSchool" {% if teacher.degree == "highSchool" %} selected="selected" {% endif %}>Ensino Médio Completo</option>
      <option value="higherSchool" {% if teacher.degree == "higherSchool" %} selected="selected" {% endif %}>Ensino Superior Completo</option>
      <option value="master" {% if teacher.degree == "master" %} selected="selected" {% endif %}>Mestrado</option>
      <option value="doctorate" {% if teacher.degree == "doctorate" %} selected="selected" {% endif %}>Doutorado</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Acompanhamento</div>
  <div>
    <span><input type="radio" name="classType" value="physical" {% if teacher.classType == "physical" %} checked="checked" {% endif %}>Presencial</span>
    <span><input type="radio" name="classType" value="online" {% if teacher.classType == "online" %} checked="checked" {% endif %}>À distância</span>
  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input type="text" name="subject" placeholder="Matérias que pode lecionar" value="{{ teacher.subject }}">
  </div>
</div>

<button type="submit">Salvar</button>