{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span style="background-image: url({{ teacher.avatar_url }})"></span>  
              {{ teacher.name }}
            </td>
            <td id="subjects">
              {% for subject in teacher.subject.split(",") %}
                <div>
                  {{ subject }}
                </div>
              {% endfor %}
            </td>
            <td>
              <a href="/teachers/{{teacher.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}